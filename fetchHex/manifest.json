{
  "manifest_version": 3,
  "name": "Color Picker",
  "description": "Click any element to copy its color",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  }
}

